<Window x:Name="wPersonDetail" x:Class="WpfApp1.PersonDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Deatail Osoby" Width="500" Margin="0,0,0,20">
    <StackPanel Orientation="Vertical">
        <Label FontSize="24" Margin="0,10,0,0">Jméno</Label>
        <TextBox x:Name="txtFirstName" FontSize="24" Margin="30,0,30,0"/>
        <Label FontSize="24" Margin="0,10,0,0">Příjmení</Label>
        <TextBox x:Name="txtLastName" FontSize="24" Margin="30,0,30,0"></TextBox>
        <Label FontSize="24" Margin="0,10,0,0">Datum narození</Label>
        <TextBox x:Name="txtDateofBirth" FontSize="24" Margin="30,0,30,0"></TextBox>
        <Button x:Name="btnSave" Content="Ulož" Width="150" Height="50" Margin="0,17,0,30" FontSize="24" Click="btnSave_Click"/>


    </StackPanel>
</Window>
