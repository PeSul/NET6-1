<Window x:Name="wMain" x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Hlavní Okno" Width="800" Background="#FF8DAECD" Loaded="wMain_Loaded">
    <Grid Margin="0,17,0,3" HorizontalAlignment="Left" Width="800">
        <TextBlock x:Name="txbinfo" HorizontalAlignment="Left" Margin="70,94,0,0" Text="List osob:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36"/>
        <Button x:Name="btnPersonDetail" Content="Detail osoby" HorizontalAlignment="Left" Margin="587,88,0,0" VerticalAlignment="Top" FontSize="24" Click="btnPersonDetail_Click" RenderTransformOrigin="-1.857,0.653" Padding="20,10,20,10" ClickMode="Release"/>
        <DataGrid x:Name="grdPeople" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,150,0,0" RenderTransformOrigin="0.497,0.528"/>

    </Grid>
</Window>
